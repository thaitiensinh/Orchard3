                            <tr>
                                <td colspan='3'>
                                    <table>
                                        <col width="100px" />
                                        <col width="100px" />
                                        <col width="230px" />
                                        <tr>
                                            <td style="font-size: 16px; color: #8CBB00">
                                                <img src="../../Modules/VIC_Story/Styles/images/icon_tim.png" />@i.AmountCare
                                            </td>
                                            <td style="font-size: 16px; color: Red">
                                                <img src="../../Modules/VIC_Story/Styles/images/icon_sao.png" />20
                                            </td>
                                            <td style="font-size: 16px">
                                                <img src="../../Modules/VIC_Story/Styles/images/icon_gio.png" />@i.StartDate.Value.ToShortDateString()
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="font-size: 13px; color: #8CBB00">
